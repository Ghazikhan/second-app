<h3>Educations</h3>
<hr>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Division</th>
      <th>Obt: Marks</th>
      <th>Pass year</th>
      <th>Degree</th>
      <th>Institute</th>
    </tr>
  </thead>

  <tbody>
    <% @user.educations.each do |education| %>
      <tr>
        <td><%= education.division %></td>
        <td><%= education.obtained_marks %></td>
        <td><%= education.pass_year.strftime("%Y") %></td>
        <td><%= education.degre.name_with_type %></td>
        <td><%= education.institute.name_with_city %></td>
        <td><%= link_to "", edit_user_education_path(current_user, education),
                                            class: "glyphicon glyphicon-pencil" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
